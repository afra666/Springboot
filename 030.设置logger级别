//application.properties
server.port=80
my.msg=this is a massage
logging.level.p=trace


//Hello.java
package p.controller;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class Hello {
    private static final Logger logger= LoggerFactory.getLogger(Hello.class);
    @Value("${my.msg}")
    private String msg;

    @GetMapping("")
    public String toString() {return msg; }

    @GetMapping("/log")
    public void log(){
        logger.trace("===========trace");
        logger.debug("===========debug");
        logger.info("===========info");
        logger.warn("===========warn");
        logger.error("===========error");
    }
}


//输出
2019-11-14 08:39:47.949 TRACE 18084 --- [p-nio-80-exec-1] p.controller.Hello                       : ===========trace
2019-11-14 08:39:47.950 DEBUG 18084 --- [p-nio-80-exec-1] p.controller.Hello                       : ===========debug
2019-11-14 08:39:47.950  INFO 18084 --- [p-nio-80-exec-1] p.controller.Hello                       : ===========info
2019-11-14 08:39:47.950  WARN 18084 --- [p-nio-80-exec-1] p.controller.Hello                       : ===========warn
2019-11-14 08:39:47.950 ERROR 18084 --- [p-nio-80-exec-1] p.controller.Hello                       : ===========error
